{% extends 'base.html.twig' %}

{% block main %}
    <main class="flex-shrink-0 pt-5">
        <div class="container">

            <form method="post" action="/?controller=project&action=save&id={{ project.id }}">
                <div class="mb-3">
                    <label class="form-label" for="cim">Cím</label>
                    <input class="form-control" id="cim" type="text" value="{{ project.title }}" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description"></label>
                    <textarea class="form-control" name="description" id="description">{{ project.description }}</textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="statusz">Státusz</label>
                    <select class="form-select" id="statusz" aria-label="Státusz">
                        {% for status in statuses %}
                            <option value="{{ status }}">{{ status }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="kapcsolattartoNeve">Kapcsolattartó neve</label>
                    <input class="form-control" id="kapcsolattartoNeve" type="text" value="{{ project.owner.name }}" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="kapcsolattartoEMailCime">Kapcsolattartó e-mail címe</label>
                    <input class="form-control" id="kapcsolattartoEMailCime" type="text" value="{{ project.owner.email }}" />
                </div>
                <div class="d-grid">
                    <button class="btn btn-primary" id="submitButton" type="submit">Submit</button>
                </div>
            </form>


        </div>
    </main>
{% endblock %}
