{% extends 'base.html.twig' %}

{% block main %}
    <main class="flex-shrink-0 pt-5">
        <div class="container">

            <form id="editProject">
                <div class="mb-3">
                    <label class="form-label" for="cim">Cím</label>
                    <input class="form-control" id="cim" type="text" placeholder="Cím" data-sb-validations="" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="newField1">New Field 1</label>
                    <input class="form-control" id="newField1" type="text" placeholder="New Field 1" data-sb-validations="" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="statusz">Státusz</label>
                    <select class="form-select" id="statusz" aria-label="Státusz">
                        {% for status in statuses %}
                            <option value="{{ status }}">{{ status }}</option>
                        {% endfor %}
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="kapcsolattartoNeve">Kapcsolattartó neve</label>
                    <input class="form-control" id="kapcsolattartoNeve" type="text" placeholder="Kapcsolattartó neve" data-sb-validations="" />
                </div>
                <div class="mb-3">
                    <label class="form-label" for="kapcsolattartoEMailCime">Kapcsolattartó e-mail címe</label>
                    <input class="form-control" id="kapcsolattartoEMailCime" type="text" placeholder="Kapcsolattartó e-mail címe" data-sb-validations="required" />
                    <div class="invalid-feedback" data-sb-feedback="kapcsolattartoEMailCime:required">Kapcsolattartó e-mail címe is required.</div>
                </div>
                <div class="d-grid">
                    <button class="btn btn-primary" id="submitButton" type="submit">Submit</button>
                </div>
            </form>


        </div>
    </main>
{% endblock %}
